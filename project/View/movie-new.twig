{% include 'header.twig' %}
{% include 'navbar.twig' %}

<body>
<div class="container mt-5">
    <h1 class="mb-4">Додавання нового фільму</h1>
    <form method="post">
        <input type="hidden" name="csrfKey" value={{ csrfKey }}>
        <div class="form-group">
            <label for="title">Назва фільму:</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="form-group">
            <label for="releaseYear">Рік випуску:</label>
            <input type="number" class="form-control" id="releaseYear" name="releaseYear" required min="1900" max="2024">
        </div>
        <div class="form-group">
            <label for="format">Формат:</label>
            <select class="form-control" id="format" name="format" required>
                {% for format in formats %}
                    <option value="{{ format }}">{{ format }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group" id="stars">
            <label>Актори:</label>
            <div class="actor-input-group mb-2">
                <input type="text" class="form-control" name="stars[]" required>
                <button type="button" class="btn btn-danger btn-remove-star">Видалити</button>
            </div>
        </div>
        <button type="button" class="btn btn-primary mb-3" id="addStar">Додати актора</button>
        <button type="submit" class="btn btn-primary btn-lg mt-3 mx-auto d-block" id="addMovieBtn">Зберегти</button>
    </form>
</div>
<script>
{% include 'custom-script.js' %}
</script>
