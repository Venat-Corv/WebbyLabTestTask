{% include 'header.twig' %}
{% include 'navbar.twig' %}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <form method="post" class="form-inline">
                <div class="form-group mr-2">
                    <input type="text" name="search" class="form-control" placeholder="Пошук...">
                    <input type="hidden" name="csrfKey" value={{ csrfKey }}>

                <button type="submit" class="btn btn-primary mr-2">Знайти</button>
                </div>
            </form>
        </div>
        <div class="col-auto">
            <a href="/movie/new" class="btn btn-primary">Додати фільм</a>
        </div>
    </div>
    {% for movie in allMovies %}
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.title }}</h5>
                        <p class="card-text">Рік випуску: {{ movie.releaseYear }}</p>
                        <p class="card-text">Формат: {{ movie.format }}</p>
                        <div class="d-flex justify-content-end">
                            <a href="/movie/info?id={{ movie.id }}" class="btn btn-success mr-2">Інформація</a>
                            <a href="/movie/delete?id={{ movie.id }}" class="btn btn-danger">Видалити</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% include 'footer.twig' %}